{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "required": ["configurations", "objects", "object_groups", "conditions", "rules", "policies"],
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "configurations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_configuration"
                    }
                },
                "objects": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_object"
                    }
                },
                "object_groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_object_group"
                    }
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_condition"
                    }
                },
                "condition_groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_condition_group"
                    }
                },
                "rules": {
                    "type": "array",
                    "items": { 
                        "$ref": "#/definitions/policy_manager_rule"
                    }
                },
                "policies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_policy"
                    }
                }
            }
        },
        "policy_manager_configuration": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_configuration_id"
                },        
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_category"
                    }
                }
            }
        },
        "policy_manager_configuration_id": {
            "type": "string"
        },
        "policy_manager_object": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_object_id"
                },        
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                }
            }
        },
        "policy_manager_object_id": {
            "type": "string"
        },
        "policy_manager_object_group": {
            "type": "object",
            "required": ["id", "items"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_object_group_id"
                },        
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "items": 
                {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref": "#/definitions/policy_manager_object_id"
                            },
                            {
                                "$ref":  "#/definitions/policy_manager_object_group_id"
                            }
                        ]
                    }
                }
            }
        },
        "policy_manager_object_group_id": {
            "type": "string"
        },
        "policy_manager_condition": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_condition_id"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_criterion"
                    }
                }
            }
        },
        "policy_manager_condition_id": {
            "type": "string"
        },
        "policy_manager_criterion": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "CLIENT_ADDRESS", 
                        "CLIENT_PORT", 
                        "DAY_OF_WEEK",
                        "DEST_ADDRESS",
                        "GEOIP_LOCATION",
                        "INTERFACE", 
                        "SERVER_ADDRESS", 
                        "SERVER_PORT", 
                        "SERVICE_ENDPOINT",
                        "SOURCE_ADDRESS", 
                        "PROTOCOL_TYPE",
                        "TIME_OF_DAY",
                        "VLAN_ID"
                    ]
                },
                "op": {
                    "type": "string",
                    "enum": ["==","!=","<",">","<=",">=","in","match"]
                },
                "object": {
                    "oneOf": [
                        {
                            "value": "string"
                        },
                        {
                            "type": "array",
                            "items": {
                                "object": "string"
                            }
                        }
                    ]
                }
            }
        },
        "policy_manager_condition_group": {
            "type": "object",
            "required": ["id", "items"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_condition_group_id"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "items": 
                {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_condition_id"
                    }
                }
            }
        },
        "policy_manager_condition_group_id": {
            "type": "string"
        },
        "policy_manager_rule": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["GeoipFilterRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }        
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["ApplicationControlRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["WanPolicyRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["SecurityRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["DnsRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }        
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["PortForwardRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "dnat_address": {
                            "type": "string"
                        },
                        "dnat_port": {
                            "type": "integer"
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["ThreatPreventionRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }        
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["WebFilterRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }        
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["CaptivePortalRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "configuration_id": {
                            "$ref": "#/definitions/policy_manager_configuration_id"    
                        }        
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["ShapingRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "priority": {
                            "type": "integer"
                        }
                    }
                },
                {
                    "type": "object",
                    "properties": {
                        "id": {
                            "$ref": "#/definitions/policy_manager_rule_id"
                        },
                        "name": {
                            "type": "string"
                        },
                        "description": {
                            "type": "string"
                        },
                        "enabled": {
                            "type": "boolean"
                        },
                        "type": {
                            "type": "string",
                            "enum": ["NatRuleObject"]
                        },
                        "conditions": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/policy_manager_condition_id"
                            }
                        },
                        "snat_address": {
                            "type": "string"
                        }
                    }
                }                    
            ]
        },
        "policy_manager_rule_id": {
            "type": "string"
        },
        "policy_manager_policy": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "$ref": "#/definitions/policy_manager_policy_id"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "anyOf": [
                            {
                                "$ref":  "#/definitions/policy_manager_condition_id"
                            },
                            {
                                "$ref":  "#/definitions/policy_manager_condition_group_id"
                            }
                        ]
                    }    
                },
                "rule":  {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_rule_id"
                    }    
                }
            }        
        },
        "policy_manager_policy_id": {
            "type": "string"
        },

        "policy_manager_category": {
            "type": "string",
            "enum": [
                "discovery",
                "geoip",
                "threatprevention",
                "webfilter"
            ],
            "geoip": {
                "$ref": "file:geoip/geoip_schema.json#/definitions/geoip_settings"
            },
            "threatprevention": {
                "$ref": "file:threatprevention/threatprevention_schema.json#/definitions/threatprevention_settings" 
            },
            "webfilter": {
                "$ref": "file:webfilter/webfilter_schema.json#/definitions/webfilter_settings"
            }
        },

        "policy_manager_filters": {
            "type": "array",
            "items": { 
                "type": "object",
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "bool"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_filter"
                    }
                },
                "action": {
                    "type": "string",
                    "enum": [
                        "drop",
                        "accept",
                        "reject",
                        "redirect"
                    ]
                }
            }
        },
        "policy_manager_filter" : {
            "type" : "object",
            "properties" :{
                "operator": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "property": {
                    "type": "string"
                }
            }

        },
        "policy_manager_group" : {
            "type": "object",
            "required": ["type"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "enum": [
                        "GeoIPLocation", "InterfaceZone", "IPAddrList", "ServiceEndpoint", "ConditionGroup"
                        ]
                },
                "choice": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/policy_manager_geoiplocation"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_interfacezone"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_ipaddrlist"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_service_endpoint"
                        },
                        {
                            "$ref": "#/definitions/policy_manger_condition_group"
                        }
                    ]
                }
            }
        },
        "policy_manager_geoiplocation": {
            "type": "array",
            "items": {
                "country": "string"
            }
        },
        "policy_manager_interfacezone": {
            "type": "array",
            "items": {
                "interface": "int"
            }
        },
        "policy_manager_ipaddrlist": {
            "type": "array",
            "items": {
                "ipspecifier": {
                    "$ref": "#/definitions/policy_manager_ipspecifier"
                    }
            }
        },
        "policy_manager_service_endpoint": {
            "type": "array",
            "items": {
                "protocol": {
                    "type": "array",
                    "items": {
                        "type": "int",
                        "description": "protocol number"
                    }   
                },
               "port": {
                    "type": "array",
                    "items": {
                        "type": "int",
                        "description": "port number"
                    }   
                }
            }
        },
        "policy_manager_ipspecifier": {
            "anyof": [
                "ip",
                "cidr",
                "iprange"
            ]
        }
    }
}
