{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "flowCategories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_flowCategories"
                    }
                },
                "configurations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_configurations"
                    }
                },
                "policies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_policies"
                    }
                }
            }
        },
        "policy_manager_flowCategories": {
            "type": "array",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_conditions"
                    }
                }
            }
        },
        "policy_manager_conditions": {
            "condition": "string",
            "enum": [
                "CLIENT_ADDRESS", 
                "CLIENT_PORT", 
                "DAY_OF_WEEK",
                "DEST_ADDRESS",
                "INTERFACE", 
                "SERVER_ADDRESS", 
                "SERVER_PORT", 
                "SOURCE_ADDRESS", 
                "PROTOCOL_TYPE",
                "TIME_OF_DAY",
                "VLAN_ID"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "op": {
                    "type": "string",
                    "enum": ["==","!=","<",">","<=",">="]
                },
                "value": {
                    "type": "array",
                    "items": {
                        "string": "string"
                    }
                }
            }
        },
        "policy_manager_configurations": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_category"
                    }
                }
            }
        },
        "policy_manager_category": {
            "type": "string",
            "enum": [
                "discovery",
                "geoip",
                "threatprevention",
                "webfilter"
            ],
            "geoip": {
                "$ref": "file:geoip/geoip_schema.json#/definitions/geoip_settings"
            },
            "threatprevention": {
                "$ref": "file:threatprevention/threatprevention_schema.json#/definitions/threatprevention_settings" 
            },
            "webfilter": {
                "$ref": "file:webfilter/webfilter_schema.json#/definitions/webfilter_settings"
            }
        },
        "policy_manager_policies": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },    
                    "defaults": {
                        "type": "boolean"
                    },    
                    "configurations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_configurations"
                        }
                    },
                    "flowCategories": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_flowCategories"
                        }
                    }
                }
            }
        },
        "policy_manager_filters": {
            "type": "array",
            "items": { 
                "type": "object",
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "bool"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_filter"
                    }
                },
                "action": {
                    "type": "string",
                    "enum": [
                        "drop",
                        "accept",
                        "reject",
                        "redirect"
                    ]
                }
            }
        },
        "policy_manager_filter" : {
            "type" : "object",
            "properties" :{
                "operator": {
                    "type": "string"
                },
                "value": {
                    "type": "string"
                },
                "property": {
                    "type": "string"
                }
            }

        }
    }
}
