{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "flows": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_flows"
                    }
                },
                "configurations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_configurations"
                    }
                },
                "policies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_policies"
                    }
                }
            }
        },
        "policy_manager_flows": {
            "type": "array",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_conditions"
                    }
                }
            }
        },
        "policy_manager_conditions": {
            "type": "string",
            "enum": [
                "CLIENT_ADDRESS", 
                "CLIENT_PORT", 
                "DAY",
                "DEST_ADDRESS",
                "INTERFACE", 
                "SERVER_ADDRESS", 
                "SERVER_PORT", 
                "SOURCE_ADDRESS", 
                "PROTOCOL_TYPE",
                "TIME",
                "VLAN"
            ],
            "op": {
                "type": "string",
                "enum": ["==","!=","<",">","<=",">="]
            },
            "value": {
                "type": "string"
            }
        },
        "policy_manager_configurations": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "redirect": {
                    "type": "boolean"
                },
                "sensitivity": {
                    "type": "integer"
                },
                "category": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_categories"
                    }
                }
            }
        },
        "policy_manager_categories": {
            "type": "string",
            "enum": [
                "discovery",
                "geoip",
                "threadprevention",
                "webfilter"
            ],
            "discovery": {
                "$ref": "#/definitions/discovery_schema"
            },
            "discover": {
                "$ref": "file:discovery/discovery_schema.json#/definitions/discovery_settings"
            },
            "geoip": {
                "$ref": "file:geoip/geoip_schema.json#/definitions/geoip_settings"
            },
            "threadprevention": {
                "$ref": "file:threatprevention/threatprevention_schema.json#/definitions/threatprevention_settings" 
            },
            "webfilter": {
                "$ref": "file:webfilter/webfilter_schema.json#/definitions/webfilter_settings"
            }
        },
        "policy_manager_policies": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },    
                    "defaults": {
                        "type": "boolean"
                    },    
                    "configurations": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_configurations"
                        }
                    },
                    "flows": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_flows"
                        }
                    }
                }
            }
        }
    }
}
