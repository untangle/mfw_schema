{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "flows": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_flowCategory"
                    }
                },
                "configurations": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_configuration"
                    }
                },
                "groups": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_group"
                    }
                },
                "policies": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_policy"
                    }
                }
            }
        },
        "policy_manager_flowCategory": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_condition"
                    }
                }
            }
        },
        "policy_manager_condition": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": [
                        "CLIENT_ADDRESS", 
                        "CLIENT_PORT", 
                        "DAY_OF_WEEK",
                        "DEST_ADDRESS",
                        "GEOIP_LOCATION",
                        "INTERFACE", 
                        "SERVER_ADDRESS", 
                        "SERVER_PORT", 
                        "SERVICE_ENDPOINT",
                        "SOURCE_ADDRESS", 
                        "PROTOCOL_TYPE",
                        "TIME_OF_DAY",
                        "VLAN_ID"
                    ]
                },
                "op": {
                    "type": "string",
                    "enum": ["==","!=","<",">","<=",">=","match"]
                },
                "value": {
                    "anyOf": [
                        {
                            "type": "array",
                            "items": {
                                "string": "string"
                            }    
                        },
                        {
                            "type": "object",
                            "properties": {
                                "groupId": {
                                    "type": "string"
                                }
                            }    
                        }
                    ]
                }
            }
        },
        "policy_manager_configuration": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_category"
                    }
                }
            }
        },
        "policy_manager_category": {
            "type": "string",
            "enum": [
                "discovery",
                "geoip",
                "threatprevention",
                "webfilter"
            ],
            "geoip": {
                "$ref": "file:geoip/geoip_schema.json#/definitions/geoip_settings"
            },
            "threatprevention": {
                "$ref": "file:threatprevention/threatprevention_schema.json#/definitions/threatprevention_settings" 
            },
            "webfilter": {
                "$ref": "file:webfilter/webfilter_schema.json#/definitions/webfilter_settings"
            }
        },
        "policy_manager_policy": {
            "type": "object",
            "required": ["id"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                },    
                "defaults": {
                    "type": "boolean"
                },    
                "configurations": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "flowCategories": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_flowCategories"
                    }
                }
            }
        },
        "policy_manager_filters": {
            "type": "array",
            "items": { 
                "type": "object",
                "name": {
                    "type": "string"
                },
                "enabled": {
                    "type": "bool"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_filter"
                    }
                },
                "action": {
                    "type": "string",
                    "enum": [
                        "drop",
                        "accept",
                        "reject",
                        "redirect"
                    ]
                }
            }
        },
        "policy_manager_filter" : {
            "type" : "object",
            "properties" :{
                "operator": {
                    "type": "string"
                },
                "type": {
                    "type": "string"
                },
                "property": {
                    "type": "string"
                }
            }

        },
        "policy_manager_group" : {
            "type": "object",
            "required": ["type"],
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "type": {"enum": ["GeoIPLocation", "InterfaceZone", "IPAddrList", "ServiceEndpoint"]},
                "choice": {
                    "anyOf": [
                        {
                            "$ref": "#/definitions/policy_manager_geoiplocation"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_interfacezone"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_ipaddrlist"
                        },
                        {
                            "$ref": "#/definitions/policy_manager_service_endpoint"
                        }
                    ]
                }
            }
        },
        "policy_manager_geoiplocation": {
            "type": "array",
            "items": {
                "country": "string"
            }
        },
        "policy_manager_interfacezone": {
            "type": "array",
            "items": {
                "interface": "int"
            }
        },
        "policy_manager_ipaddrlist": {
            "type": "array",
            "items": {
                "ipspecifier": {
                    "$ref": "#/definitions/policy_manager_ipspecifier"
                    }
            }
        },
        "policy_manager_service_endpoint": {
            "type": "array",
            "items": {
                "protocol": "int",
                "port": "int"
            }
        },
        "policy_manager_ipspecifier": {
            "anyof": [
                "ip",
                "cidr",
                "iprange"
            ]
        }
    }
}
