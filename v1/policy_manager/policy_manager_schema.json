{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "cloud_classification": {
                    "type": "boolean"
                },
                "custom_rules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_custom_rules"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_actions"
                    }
                }
            }
        },
        "policy_manager_actions": {
            "type": "object",
            "properties": {
                "reject": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "block": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "flag": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "policy_manager_custom_rules": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_custom_rules_conditions"
                    }
                },
                "action": {
                    "type": "string"
                }
            }
        },
        "policy_manager_custom_rules_conditions": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["CLIENT_ADDRESS", "CLIENT_PORT", "SERVER_ADDRESS", "SERVER_PORT", "PROTOCOL_TYPE"]
                    },
                    "value": {
                        "type": "string"
                    },
                    "op": {
                        "type": "string",
                        "enum": ["==","!=","<",">","<=",">="]
                    }
                }
            }
        }
    }
}
