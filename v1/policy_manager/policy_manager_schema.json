{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "policy_manager_settings": {
            "type": "object",
            "description": "Policy Manager settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "flow": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_flow"
                    }
                },
                "condition": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/polocy_manager_condition"
                    }
                },
                "configuration": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_configuration"
                    }
                },
                "policy": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_policy"
                    }
                }
            }
        },
        "policy_manager_flow": {
            "type": "array",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "condition": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_condition"
                    }
                }
            }
        },
        "policy_manager_condition": {
            "condition": "string",
            "enum": [
                "CLIENT_ADDRESS", 
                "CLIENT_PORT", 
                "DAY_OF_WEEK",
                "DEST_ADDRESS",
                "INTERFACE", 
                "SERVER_ADDRESS", 
                "SERVER_PORT", 
                "SOURCE_ADDRESS", 
                "PROTOCOL_TYPE",
                "TIME_OF_DAY",
                "VLAN_ID"
            ],
            "properties": {
                "id": {
                    "type": "string"
                },
                "op": {
                    "type": "string",
                    "enum": ["==","!=","<",">","<=",">="]
                },
                "value": {
                    "type": "string"
                }
            }
        },
        "policy_manager_configuration": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/policy_manager_category"
                    }
                }
            }
        },
        "policy_manager_category": {
            "type": "string",
            "enum": [
                "discovery",
                "geoip",
                "threatprevention",
                "webfilter"
            ],
            "discovery": {
                "$ref": "file:discovery/discovery_schema.json#/definitions/discovery_settings"
            },
            "geoip": {
                "$ref": "file:geoip/geoip_schema.json#/definitions/geoip_settings"
            },
            "threatprevention": {
                "$ref": "file:threatprevention/threatprevention_schema.json#/definitions/threatprevention_settings" 
            },
            "webfilter": {
                "$ref": "file:webfilter/webfilter_schema.json#/definitions/webfilter_settings"
            }
        },
        "policy_manager_policy": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "name": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "enabled": {
                        "type": "boolean"
                    },    
                    "defaults": {
                        "type": "boolean"
                    },    
                    "configuration": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_configuration"
                        }
                    },
                    "flow": {
                        "type": "array",
                        "items": {
                            "$ref": "#/definitions/policy_manager_flow"
                        }
                    }
                }
            }
        }
    }
}
