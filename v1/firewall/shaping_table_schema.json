{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "shaping_table": {
            "allOf": [
                { "$ref": "firewall_schema.json#/definitions/table" },
                {
                    "properties": {
                    "chains": {
                        "type": "array",
                        "items": {
                            "allOf": [
                                { "$ref": "firewall_schema.json#/definitions/chain" },
                                { "properties": {
                                    "rules": {
                                        "type": "array",
                                        "items": {
                                            "allOf": [
                                                { "$ref": "firewall_schema.json#/definitions/rule" },
                                                { "properties": {
                                                    "action": {
                                                        "allOf": [
                                                            { "$ref": "firewall_schema.json#/definitions/rule_action" },
                                                            { "properties": {
                                                                "type": {
                                                                    "type": "string",
                                                                    "enum": ["JUMP","GOTO","ACCEPT","RETURN","DROP","SET_PRIORITY","LIMIT_EXCEED_ACTION"]
                                                                }
                                                            }}]
                                                    }
                                                }}]
                                        }
                                    }
                                }}]
                        }
                    }
                }}]
        }
    }
}
