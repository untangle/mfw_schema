{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "definitions": {
        "application_control_settings": {
            "type": "object",
            "description": "Application control settings",
            "properties": {
                "enabled": {
                    "type": "boolean"
                },
                "cloud_classification": {
                    "type": "boolean"
                },
                "bypass_filters": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/application_control_bypass_filters"
                    }
                },
                "custom_rules": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/application_control_custom_rules"
                    }
                },
                "actions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/application_control_actions"
                    }
                }
            }
        },
        "application_control_actions": {
            "type": "object",
            "properties": {
                "reject": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "block": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "flag": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "application_control_bypass_filters": {
            "type": "object",
            "properties": {
                "type": {
                    "type": "string",
                    "enum": ["CLIENT_ADDRESS", "CLIENT_PORT", "SERVER_ADDRESS", "SERVER_PORT", "PROTOCOL_TYPE"]
                },
                "value": {
                    "type": "string"
                },
                "enabled": {
                    "type": "boolean"
                }
            }
        },
        "application_control_custom_rules": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "description": {
                    "type": "string"
                },
                "category": {
                    "type": "string"
                },
                "conditions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/application_control_custom_rules_conditions"
                    }
                },
                "actions": {
                    "block": {
                        "type": "boolean"
                    },
                    "drop": {
                        "type": "boolean"
                    },
                    "flag": {
                        "type": "boolean"
                    }
                }
            }
        },
        "application_control_custom_rules_conditions": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": ["CLIENT_ADDRESS", "CLIENT_PORT", "SERVER_ADDRESS", "SERVER_PORT", "PROTOCOL_TYPE"]
                    },
                    "value": {
                        "type": "string"
                    },
                    "op": {
                        "type": "string",
                        "enum": ["==","!=","<",">","<=",">="]
                    }
                }
            }
        }
    }
}
